---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import { SITE_TITLE } from "../../consts";

export async function getStaticPaths() {
	const posts = await getCollection("blog");
	const allTags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

	return allTags.map((tag) => ({
		params: { tag },
		props: {
			tag,
			allTags: allTags.sort(),
			posts: posts
				.filter((post) => post.data.tags?.includes(tag))
				.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
		},
	}));
}

const { tag, allTags, posts } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Articles avec le tag "${tag}" - ${SITE_TITLE}`} description={`Liste des articles avec le tag ${tag}`} />
		<style>
			main {
				width: 1100px;
			}
			.page-title {
				margin-bottom: 2rem;
			}
			.page-title h1 {
				font-size: 2rem;
				margin-bottom: 0.5rem;
			}
			.page-title p {
				color: rgb(var(--gray));
			}
			.container {
				display: flex;
				gap: 2rem;
			}
			.articles {
				flex: 1;
				order: 1;
			}
			.sidebar {
				width: 200px;
				flex-shrink: 0;
				order: 2;
				position: sticky;
				top: 2rem;
				align-self: flex-start;
			}
			.sidebar h3 {
				font-size: 1.2rem;
				margin-bottom: 1rem;
				color: rgb(var(--black));
			}
			.sidebar-tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
			}
			.sidebar-tag {
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				padding: 0.25em 0.75em;
				border-radius: 1em;
				font-size: 0.875em;
				text-decoration: none;
				transition: 0.2s ease;
			}
			.sidebar-tag:hover {
				background: var(--accent);
				color: white;
			}
			.sidebar-tag.active {
				background: var(--accent);
				color: white;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				display: block;
				width: 100%;
				aspect-ratio: 2 / 1;
				object-fit: cover;
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: var(--accent);
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 900px) {
				.container {
					flex-direction: column;
				}
				.sidebar {
					width: 100%;
					order: 1;
					position: static;
				}
				.articles {
					order: 2;
				}
				.sidebar-tags {
					justify-content: center;
				}
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="page-title">
				<h1>#{tag}</h1>
				<p>{posts.length} article{posts.length > 1 ? 's' : ''}</p>
			</div>
			<div class="container">
				<section class="articles">
					<ul>
						{
							posts.map((post) => (
								<li>
									<a href={`/blog/${post.id}/`}>
										{post.data.heroImage && (
											<Image
												width={720}
												height={360}
												src={post.data.heroImage}
												alt=""
											/>
										)}
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate
												date={post.data.pubDate}
											/>
										</p>
									</a>
								</li>
							))
						}
					</ul>
				</section>
				<aside class="sidebar">
					<h3>Tags</h3>
					<div class="sidebar-tags">
						{allTags.map((t) => (
							<a href={`/tags/${t}/`} class:list={["sidebar-tag", { active: t === tag }]}>{t}</a>
						))}
					</div>
				</aside>
			</div>
		</main>
		<Footer />
	</body>
</html>
